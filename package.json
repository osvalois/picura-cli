{
  "name": "picura",
  "version": "0.0.1",
  "description": "Advanced CLI for software project management and documentation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "picura": "./bin/run.js"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "prepare": "npm run build",
    "dev": "ts-node-esm src/index.ts",
    "manifest": "oclif manifest",
    "postbuild": "oclif manifest && oclif readme"
  },
  "dependencies": {
    "@babel/parser": "^7.22.7",
    "@oclif/core": "^3.0.0",
    "@oclif/plugin-help": "^6.2.10",
    "@oclif/plugin-plugins": "^5.4.6",
    "@prisma/client": "^5.1.1",
    "chalk": "^5.3.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "marked": "^5.1.1",
    "openai": "^4.0.0",
    "ora": "^6.3.1",
    "pdf-lib": "^1.17.1",
    "simple-git": "^3.19.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.24",
    "@types/fs-extra": "^11.0.1",
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "mocha": "^10.2.0",
    "oclif": "^3.9.1",
    "prisma": "^5.1.1",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "oclif": {
    "bin": "picura",
    "dirname": "picura",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "init": {
        "description": "Initialize a new PICURA project"
      },
      "generate": {
        "description": "Generate project documentation"
      }
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "types": "dist/index.d.ts",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ]
}
