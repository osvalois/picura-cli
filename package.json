{
    "name": "picura-cli",
    "version": "1.0.0",
    "description": "PICURA: CLI Avanzada para GestiÃ³n Integral de Proyectos de Software",
    "author": "Your Name",
    "bin": {
        "picura": "./bin/run"
    },
    "homepage": "https://github.com/yourusername/picura-cli",
    "license": "MIT",
    "main": "dist/index.js",
    "repository": "yourusername/picura-cli",
    "files": [
        "/bin",
        "/dist",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "dependencies": {
        "@oclif/core": "^2.8.0",
        "@oclif/plugin-help": "^5.2.9",
        "@oclif/plugin-plugins": "^3.1.8",
        "@prisma/client": "^5.19.1",
        "chalk": "^4.1.2",
        "dotenv": "^16.0.3",
        "fs-extra": "^11.1.1",
        "openai": "^3.2.1",
        "ora": "^5.4.1",
        "simple-git": "^3.19.0",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@oclif/test": "^2.3.17",
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^18.16.3",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "eslint": "^8.39.0",
        "eslint-config-oclif": "^4.0.0",
        "eslint-config-oclif-typescript": "^1.0.3",
        "globby": "^11.1.0",
        "oclif": "^3.8.1",
        "prisma": "^5.19.1",
        "shx": "^0.3.4",
        "ts-node": "^10.9.1",
        "tslib": "^2.5.0",
        "typescript": "^5.0.4"
    },
    "oclif": {
        "bin": "picura",
        "dirname": "picura",
        "commands": "./dist/commands",
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-plugins"
        ],
        "topicSeparator": " ",
        "topics": {
            "init": {
                "description": "Initialize a new PICURA project"
            },
            "generate": {
                "description": "Generate project documentation"
            }
        }
    },
    "scripts": {
        "build": "shx rm -rf dist && tsc -b",
        "lint": "eslint . --ext .ts --config .eslintrc",
        "postpack": "shx rm -f oclif.manifest.json",
        "posttest": "npm run lint",
        "prepack": "npm run build && oclif manifest && oclif readme",
        "test": "mocha --forbid-only \"test/**/*.test.ts\"",
        "version": "oclif readme && git add README.md",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "start": "node bin/run",
        "dev": "ts-node src/index.ts",
        "unlink": "npm unlink -g picura-cli",
        "link": "npm link",
        "update-local": "npm run unlink && npm install && npm run build && npm run link"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "bugs": "https://github.com/yourusername/picura-cli/issues",
    "keywords": [
        "oclif",
        "cli",
        "project-management",
        "documentation",
        "ai"
    ],
    "types": "dist/index.d.ts"
}